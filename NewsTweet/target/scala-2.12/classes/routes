# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /twitter/auth               controllers.TwitterAuth.auth()

GET     /twitter/signin             controllers.TwitterSignInServlet.signIn()
GET     /callback 			        controllers.TwitterSignInServlet.callBack()

GET     /search					    controllers.SearchController.searchResults()
GET     /track					    controllers.TrackController.trackSearch()

GET     /addpersona					controllers.PersonaController.addPersona()
GET     /addinterest				controllers.InterestController.addInterest()
GET     /interest				    controllers.InterestController.showInterest()


GET     /logout					    controllers.TwitterSignInServlet.logOut()

GET     /category/news              controllers.HomeController.newsCategory()
GET     /category/entertainment     controllers.HomeController.entertainmentCategory()
GET     /category/music             controllers.HomeController.musicCategory()
GET     /category/tech              controllers.HomeController.techCategory()
GET     /category/sport            controllers.HomeController.sportCategory()


